                                            href="/addtocart/<%=product._id%>">
                                            <i class="ri-add-line"></i>
                                        </a>
                                    </div>
                                </div>
                                <% if ((index + 1) % 3===0) { %>
                        </div>
                        <div class="flex flex-wrap gap-4">
                            <% } %>
                                <% }) %>
                        </div>
                    </div>
                </div>
            </div>
